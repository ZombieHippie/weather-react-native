{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        // baseUrl req'd to use "paths"
        "baseUrl": "./",
        "paths": {
            // See .babelrc for complementary babel conf
            "@components/*": [ "./src/components/*", "./build/components/*" ],
            "@services/*": [ "./src/services/*", "./build/services/*" ],
            "@env": [ "./src/env", "./build/env" ]
        }
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules"
    ],
    "compileOnSave": false
}
